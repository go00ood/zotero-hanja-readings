{
  "name": "hanja-readings",
  "type": "module",
  "version": "0.1.1",
  "description": "Annotates selected text with Hanja readings",
  "config": {
    "addonName": "Hanja Readings for Zotero",
    "addonID": "hanjareadings-annotator@go00od.dev",
    "addonRef": "hanjaReadingsAnnotator",
    "addonInstance": "HanjaReadingsAnnotator",
    "prefsPrefix": "extensions.zotero.hanjaReadingsAnnotator"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/go00ood/zotero-hanja-readings.git"
  },
  "author": "go00od",
  "bugs": {
    "url": "https://github.com//go00ood"
  },
  "homepage": "https://github.com//go00ood",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.13.3",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.2.1",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^5.2.1",
    "eslint": "^9.33.0",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "zotero-plugin-scaffold": "^0.8.0",
    "zotero-types": "^4.0.5"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
